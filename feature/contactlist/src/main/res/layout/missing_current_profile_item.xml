<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="56dp"
    android:background="@drawable/contact_item_background_ripple"
    android:clickable="true"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="2dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <Space
        android:layout_width="12dp"
        android:layout_height="0dp"/>

    <FrameLayout
        android:id="@+id/avatar_container"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/current_profile_add_item_background">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/avatar_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            app:srcCompat="@drawable/round_add_24"
            app:tint="?attr/colorOnTertiaryContainer"/>

    </FrameLayout>

    <Space
        android:layout_width="16dp"
        android:layout_height="0dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/headline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="@string/missing_current_profile_action"
        android:textAppearance="?attr/textAppearanceBodyLarge"
        android:textColor="?attr/colorOnSurface"/>

    <Space
        android:layout_width="16dp"
        android:layout_height="0dp"/>

</androidx.appcompat.widget.LinearLayoutCompat>